<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" 
          fx:controller="fxml.LoginControlador"
          styleClass="login"  hgap ="15"  vgap="15" >
          
          <padding>
               <Insets left="40" right ="40" top="40" />     
          </padding>

            <columnConstraints>
                 <ColumnConstraints minWidth="60" prefWidth="60" 
                 halignment ="right"/>
                 <ColumnConstraints prefWidth="200" maxWidth = "Infinity"
                 hgrow="ALWAYS"/>
            </columnConstraints>

           <Label text = "Seja Bem Vindo"
           styleClass="login-titulo"
           GridPane.columnIndex="0" GridPane.rowIndex="0"
           GridPane.columnSpan="2"
           GridPane.halignment ="CENTER"
           ></Label>
           
           <GridPane.margin>
           <Insets  top="20" bottom="20" />
           </GridPane.margin>
           
           
             <Label text = "E-mail:"
                 GridPane.columnIndex="0" GridPane.rowIndex="1"
                  styleClass="login-form-label"
             ></Label>
             
             <TextField fx:id="emailField"
                 GridPane.columnIndex="1" GridPane.rowIndex="1"> 
             </TextField>
             <Label text = "Senha:"
                   GridPane.columnIndex="0" GridPane.rowIndex="2"
                styleClass="login-form-label" ></Label>
               
             <PasswordField fx:id="senhaField"
             GridPane.columnIndex="1" GridPane.rowIndex="2"
            >
             
             </PasswordField>
               
                <Button text ="Entrar"
                    GridPane.columnIndex="0" GridPane.rowIndex="3"
                    onAction="#entrar"
                    styleClass="login-botao"
                    GridPane.columnSpan="2"
                    GridPane.halignment ="CENTER">
                  <GridPane.margin>
           <Insets  top="20" bottom="20" />
           </GridPane.margin>
           
                </Button>
</GridPane>

